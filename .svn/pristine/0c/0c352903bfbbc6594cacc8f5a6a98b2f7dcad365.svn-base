	<script>

		/*商品-添加*/
        function GoodsAll_add(title,url){
            var index = layer.open({
                type: 2,
                title: title,
                content: url
            });
            layer.full(index);
        }


		/*商品-添加*/
        function GoodsAll_edit(title,url){
            var index = layer.open({
                type: 2,
                title: title,
                content: url
            });
            layer.full(index);
        }

		/*商品-信息*/
        function GoodsAll_information(title,url){
            var index = layer.open({
                type: 2,
                title: title,
                content: url
            });
            layer.full(index);
        }


		/*商品-赠送*/
        function GoodsAll_GiveList(title,url){
            var index = layer.open({
                type: 2,
                title: title,
                content: url
            });
            layer.full(index);
        }



		/*商品-删除*/
        function GoodsAll_del(obj,id){
            layer.confirm('确认要删除吗？',function(index){
                $.post('/jy_admin/GoodsAll/del',{'id':id},function(msg){
                    if(msg == 1){
                        $(obj).parents("tr").remove();
                        layer.msg('已删除!',{icon:1,time:1000});
                    }else{
                        layer.msg('删除失败!',{icon:1,time:1000});
                    }
                });

            });
        }
	</script>
